<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_howtohelp2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hopeforthehomeless.myapplication.howtohelp2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Help (cont.)"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/howtohelp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/directions"
        android:layout_below="@+id/howtohelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directions"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/directions"
        android:text="In the text box below please provide a website if you have one along with the following information. "/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/jobs"
        android:layout_below="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if you can provide JOBS - Include: employee wage, short description of work, work hours, category (cooking, cleaning, gardening, etc)"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/shelters"
        android:layout_below="@+id/jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if you can provide SHELTERS - Include: age group of people accepted (child, family, teen, adult)"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/food"
        android:layout_below="@+id/shelters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="if you can provide FOOD - Include: if you have vegan, vegetarian, or any other dietary options (gluten-free, pescetarian)"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/store"
        android:layout_below="@id/food"
        android:text="If you own a STORE - Include: the price range of your products."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/typing"
        android:text="Start Typing Here..."
        android:textSize="16dp"
        android:layout_below="@+id/store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="#2E8B57"
        android:text="Done"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="done"
        />
</RelativeLayout>




