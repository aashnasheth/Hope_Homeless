<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hopeforthehomeless.myapplication.firstscreen">

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hope for the Homeless"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textSize="40dp"
        android:id="@+id/hopehomeless"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/intro"
        android:layout_margin="20dp"
        android:layout_below="@id/hopehomeless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hope the Homeless is an app that unites those who need and those who can provide help by serving as a platform on which the community can supply the poor/homeless with affordable facilities."
        android:gravity="center" />
    <TextView
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whether you are looking for help or are willing to offer some, this is the app for you!"
        android:layout_below="@+id/intro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/intro1"
        android:padding="14dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <Button
            android:padding="10dp"
            android:textColor="#F0FFFF"
            android:background="#2E8B57"
            android:onClick="findnearby"
            android:text="Nearby Facilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="37dp" />

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Need Help?"
            android:id="@+id/needhelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wanttohelp"
            android:layout_alignBottom="@+id/wanttohelp"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/wanttohelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want to Help?"
            android:textSize="18sp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_above="@+id/register"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_marginTop="35dp"
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#F0FFFF"
            android:background="#2E8B57"
            android:onClick="howtohelp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/wanttohelp"
            android:layout_alignStart="@+id/wanttohelp" />


    </RelativeLayout>


</RelativeLayout>




